  <body>
    <div class="container">
      <h1>Lista de notas</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Contenido</th>
            <th scope="col">Imagen</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = 0; i < notas.length; i++) { %>
          <tr>
            <td><%= notas[i].note_name %></td>
            <td><%= notas[i].note_content %></td>
            <td><img src="<%= notas[i].note_img %>"></td>
            <td><a class="btn btn-danger" href="notes-d/<%= notas[i]._id %>" >Eliminar</a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
